
@model site.ViewModels.SpecialityViewModel;
@{
    Layout = "_Header_Footer";
}

<section class="add">
    <div class="container">
        <h2 class="h2-common">Добавление новой специальности/технологии</h2>
        <form asp-action="Add" asp-controller="Speciality" enctype="multipart/form-data" method="post" id = "addForm">
            <div asp-validation-summary="All" class="text-danger"></div>
            @* <input type="hidden" asp-for="SpecialityId" /> *@
            <div class="group">
                <label >Название специальности/технологии</label>
                <input type="text" asp-for="Names" required>      
            </div>
            
            <button id = "add" class="bttn-light">Добавить еще</button>
            <input type="submit" class="bttn-dark">
        </form>
    </div>
</section>

@section AddInputs
{
    <script>
        $(function() {
            $("#add").on("click",
                function(e) {
                    e.preventDefault();
                    console.log(1);
                    var input = document.createElement("input");
                    input.type = "text";
                    input.name = "Names";
                    input.required = true;
                    console.log(input);
                    $("#addForm .group").append(input);
                })
        })
    </script>
}