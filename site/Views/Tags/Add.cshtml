@using site.Controllers
@model site.ViewModels.TagViewModel;
@{
    Layout = "_Header_Footer";
}

<section class="add">
    <div class="container">
        <h2 class="h2-common">Добавление нового тега</h2>
        <form asp-action="Add" asp-controller="Project" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <label >Название проекта</label>
            <input type="text" asp-for="Name" required>      
            <input type="submit" class="bttn-dark">
        </form>
    </div>
</section>