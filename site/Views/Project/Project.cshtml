@using site.Controllers
@* @model IEnumerable<site.Models.Project> *@
@model Project
@{
    Layout = "_Header_Footer";
    Project project = Model;
    ViewBag.Title = project.Name;
    List<User> users = new List<User>();
    if (project.Members != null)
    {
        users = project.Members.Select(u => u.User).ToList();
    }
    string[] images = project.SliderImages.Split(":");
}

<section class="project">
    <div class="container">
        <a href="#deleteModal" class="delete">удолить</a>
        <div id="deleteModal">
            <div  class="modal">

                <form asp-controller="Project" asp-action="Delete">
                    <a href="#close" class = "close">Закрыть окно</a>
                    <input type="hidden" name = "@project.ProjectId">
                    <input type="submit" value="удолить" class = "bttn-delete">
                </form>
            </div>

        </div>
        <div class="project__cover">
            <img src="@project.Img" alt="">
        </div>
        <h1 class="project__title">@project.Name</h1>
        <div class="project__info">
            <div class="project__text">
                <h2>Описание</h2>
                <p>@project.Description</p>
                <h2>Технологии</h2>

                <p>@String.Join(", ", project.Specialities)</p>
                @if (project.Links.Count != 0)
                {
                    <h2>Ссылки на проект</h2>
                    <div class="project__links">
                        @foreach (var pr in project.Links)
                        {
                            <div class="project__links-item">
                                <img src="@pr.Pic" alt="">
                                <a href="@pr.Href">@pr.Title</a>
                            </div>
                        }


                    </div>
                }

            </div>
            <div class="project__slider">
                <div class="owl-carousel owl-theme">
                    @foreach (string img in images)
                    {
                        <img src="@img" alt="картинка для слайдера">
                    }


                </div>
            </div>
        </div>
        


    </div>
</section>
<section class="team">
    <h2 class="h2-common">Наша команда</h2>
    <div class="container">
        <div class="team__list">     
            @{
                @(await Html.PartialAsync("Members", users))
            }
        </div>
    </div>

</section>

@section OwlCSS
{

    <link rel="stylesheet" href="~/css/owl-min.css">
    <link rel="stylesheet" href="~/css/owl-theme.css">
}

@section OwlJs
{
    <script src="../../js/owl.carousel.min.js"></script>
}