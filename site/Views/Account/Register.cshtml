@model site.ViewModels.RegisterViewModel
@{
	Layout = "_Header_Footer";

}
<section class="login">

	<div class="container">
		<h2 class = "h2-common">Регистрация нового пользователя</h2>

		<form method="post" asp-controller="Account" asp-action="Register">
			<div asp-validation-summary="ModelOnly"></div>
			<div class = "register__group">
				<label asp-for="Email"></label>
				<input asp-for="Email"  type = "text" />
				<span asp-validation-for="Email"></span>
			</div>
			<div class = "register__group">
				<label asp-for="Password"></label>
				<input asp-for="Password"  type = "password" />
				<span asp-validation-for="Password"></span>
			</div>
			<div class = "register__group">
				<label asp-for="PasswordConfirm"></label>
				<input asp-for="PasswordConfirm" type = "password"/>
				<span asp-validation-for="PasswordConfirm"></span>
			</div>
			<div class = "register__group">
				<input type="submit" value="Регистрация" class="bttn-dark" />
			</div>
		</form>
	</div>

</section>