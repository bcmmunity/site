@model site.ViewModels.LoginViewModel
@{
	Layout = "_Header_Footer";

}

<section class="login">

	<div class="container">
		<h2 class = "h2-common">Вход в приложение</h2>
		<form method="post" asp-controller="Account" asp-action="Login"
		      asp-route-returnUrl="" class = "login__form">
			<div asp-validation-summary="ModelOnly"></div>
			<div class = "login__group">
				<label asp-for="Email"></label>
				<input asp-for="Email" type = "text" />
				<span asp-validation-for="Email"></span>
			</div>
			<div class = "login__group">
				<label asp-for="Password"></label>
				<input asp-for="Password" type = "password" />
				<span asp-validation-for="Password"></span>
			</div>
			<div class = "login__group">
				<label asp-for="RememberMe"></label>
				<input asp-for="RememberMe" type="checkbox"/>
			</div>
			<div class = "login__group">
				<input type="submit" value="Войти" class="bttn-dark" />
			</div>
		</form>

	</div>

</section>