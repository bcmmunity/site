@model site.ViewModels.LoginViewModel
@{
	Layout = "_Header_Footer";

}
<section class="login">
	<h2 class = "h2-common">Вход в приложение</h2>
	<div class="container">
		<div class="row justify-content-center">
			<form method="post" asp-controller="Account" asp-action="Login"
			      asp-route-returnUrl="" class = "login__form">
				<div asp-validation-summary="ModelOnly"></div>
				<div>
					<label asp-for="Email"></label><br />
					<input asp-for="Email" class = "login__form__input" />
					<span asp-validation-for="Email"></span>
				</div>
				<div>
					<label asp-for="Password"></label><br />
					<input asp-for="Password" class = "login__form__input" />
					<span asp-validation-for="Password"></span>
				</div>
				<div>
					<label asp-for="RememberMe"></label><br />
					<input asp-for="RememberMe"/>
				</div>
				<div class = "login__form__wrap">
					<input type="submit" value="Войти" />
				</div>
			</form>
		</div>

	</div>

</section>