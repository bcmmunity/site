@using site.Controllers
@model IEnumerable<site.Models.Project>

@{
	Project[]	pr = Model.ToArray();

	
}


<section class="projects" id = "pr"> 
	<h2 class="h2-сommon">Projects</h2>
	<div class="container">
	
		@for (int i = 0, len = pr.Length; i < len; i += 2)
		{
			<div class="row">
				@if (i < len)
				{
					<div class="col-6">
						<div class="projects__item">
							<div class="left">
								<img class="left__img" src="~/img/sample.jpg" alt="">
							</div>
							<div class="right">
								<div class="projects__title">
									<span class="type">@pr[i].Name</span>
									<span class="date">September, 12, 2017</span>
								</div>
								<span class="name">@pr[i].Name</span>
								<div class="comp-more">
									<span class="company">Diffind</span>
									<a href="">Learn more</a>
								</div>

							</div>
						</div>
					</div>
				}

				@if (i + 1 < len)
				{
					<div class="col-6">
						<div class="projects__item">
							<div class="left">
								<img class="left__img" src="~/img/sample.jpg" alt="">
							</div>
							<div class="right">
								<div class="projects__title">
									<span class="type">@pr[i + 1].Name</span>
									<span class="date">September, 12, 2017</span>
								</div>

								<span class="name">@pr[i + 1].Name</span>
								<div class="comp-more">
									<span class="company">Diffind</span>
									<a href="">Learn more</a>
								</div>
							</div>
						</div>
					</div>
				}

			</div>
		}

	</div>
	<div class="projects__load">
		
		<a  class="bttn-light" id = "projects__load__button" >Загрузить еще</a>
		
	</div>

</section>

