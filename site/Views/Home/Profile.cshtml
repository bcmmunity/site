@model User
@{
  User u = Model;
    Layout = "_Header_Footer";
}

<section class="user">
  <div class="container">
	  <div class="user__group">
	  	@*@if (User.Identity.IsAuthenticated)
		{
		  <a asp-controller="User" asp-action="Edit">Редактирование профиля</a>
		}*@

	  </div>
    <div class="user__group">
      <div class="user__group-img">
        <img src="@u.Photo" alt="">
      </div>
      <div class="user__group-text">
        <span class="name">@u.Name @u.Surname</span>
        <p>@u.Description</p>
        <h2>Соц. сети</h2>
        <div class="user__links">
          @foreach (var soc in u.Socials)
          {
            <div class="user__links-item">
              <img src="@soc.Type.Pic" alt="">
              <a href="@soc.Href">@soc.Type.Title</a>
            </div>
          }
          
        </div>
      </div>
    </div>
    <h3>Навыки</h3>
    <p>@String.Join(", ", u.Specialities)</p>

  <div class="projects">
        <h2 class="h2-common">Мои проекты</h2>
        <div class="projects__list">
        <div class="container">
          @{
            Html.RenderPartial("Projects", u.Projects);          
          }
        </div>

        </div>

  </div>
  </div>
</section>